<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- 1. 扫描区域 (最上方) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扫描到的设备 (DLG-/NRF-)"
        android:textColor="#666"
        android:textSize="12sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F0F0F0"
        android:layout_marginTop="4dp">

        <ListView
            android:id="@+id/lv_scan"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:dividerHeight="0.5dp"/>

        <!-- 新增：刷新设备按钮，紧跟在列表最后 -->
        <Button
            android:id="@+id/btn_rescan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="刷新设备列表"
            android:textSize="12sp"
            android:backgroundTint="#888888"
            android:textColor="#FFFFFF"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            style="@style/Widget.AppCompat.Button.Small"/>
    </LinearLayout>

    <!-- 2. 地址输入与连接控制 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="请选择或输入设备 MAC 地址"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_mac"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="AA:BB:CC:DD:EE:FF"
            android:inputType="textCapCharacters" />

        <Button
            android:id="@+id/btn_history_toggle"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史设备" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="连接设备"
        android:textColor="#FFF" />

    <!-- 3. 历史记录 (高度自适应) -->
    <ListView
        android:id="@+id/lv_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#F8F8F8"
        android:dividerHeight="0.5dp"
        android:maxHeight="200dp"
        android:visibility="gone" />

    <!-- 新增：清空历史按钮，默认也隐藏 -->
    <Button
        android:id="@+id/btn_clear_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清空历史记录"
        android:textColor="#FF5252"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="gone" />

    <!-- 4. 功能按钮区域 -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:columnCount="3">

        <Button
            android:id="@+id/btn_sync"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:enabled="false"
            android:text="对时" />

        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:enabled="false"
            android:text="刷新屏幕" />

        <Button
            android:id="@+id/btn_invert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:enabled="false"
            android:text="屏幕反色" />

        <!--<Button
            android:id="@+id/btn_restart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:enabled="false"
            android:text="重启" />-->
    </GridLayout>

    <!-- 5. 日志输出 (占据剩余空间) -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="操作日志"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scroll_log"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:background="#555555">

        <TextView
            android:id="@+id/tv_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:padding="10dp"
            android:textColor="#00FF00"
            android:textSize="12sp" />
    </ScrollView>
</LinearLayout>